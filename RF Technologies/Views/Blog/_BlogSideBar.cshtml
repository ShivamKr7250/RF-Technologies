@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchForm').submit(function (e) {
                e.preventDefault();
                var searchTerm = $('#searchTerm').val();
                $.ajax({
                    url: '@Url.Action("Search", "Blog")',
                    type: 'POST',
                    data: { searchTerm: searchTerm },
                    success: function (response) {
                        if (response.success) {
                            Console.Print("response");
                            var results = response.data;
                            var resultsHtml = '<ul class="list-group">';
                            $.each(results, function (index, result) {
                                resultsHtml += '<li class="list-group-item">';
                                resultsHtml += '<a href="/Blog/Details?blogId=' + result.PostId + '">' + result.Title + '</a>';
                                resultsHtml += '<p>' + result.ShortDescription + '</p>';
                                resultsHtml += '<small>' + new Date(result.PublicationDate).toLocaleDateString() + '</small>';
                                resultsHtml += '</li>';
                            });
                            resultsHtml += '</ul>';
                            $('#searchResults').html(resultsHtml);
                        } else {
                            $('#searchResults').html('<p>No results found.</p>');
                        }
                    },
                    error: function () {
                        $('#searchResults').html('<p>An error occurred while searching.</p>');
                    }
                });
            });
        });
    </script>
}
